<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/admin_nav_graph"
    app:startDestination="@id/adminDashboardFragment">

    <fragment
        android:id="@+id/adminDashboardFragment"
        android:name="com.example.project_map.ui.admin.dashboard.AdminDashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_admin_dashboard" >
        <action
            android:id="@+id/action_adminDashboardFragment_to_adminDataAnggotaFragment"
            app:destination="@id/adminDataAnggotaFragment" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_fragmentTransaksiSimpanan"
            app:destination="@id/fragmentTransaksiSimpanan" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_adminLaporanKeuanganFragment"
            app:destination="@id/adminLaporanKeuanganFragment" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_adminNotifikasiFragment"
            app:destination="@id/adminNotifikasiFragment" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_adminAngsuranFragment"
            app:destination="@id/adminAngsuranFragment" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_fragmentPinjamanAdmin"
            app:destination="@id/fragmentPinjamanAdmin" />
        <action
            android:id="@+id/action_adminDashboardFragment_to_adminPengaturanFragment"
            app:destination="@id/adminPengaturanFragment" />

        <action
            android:id="@+id/action_adminDashboardFragment_to_adminWithdrawalFragment"
            app:destination="@id/adminWithdrawalFragment" />
    </fragment>

    <fragment
        android:id="@+id/adminWithdrawalFragment"
        android:name="com.example.project_map.ui.admin.withdrawal.AdminWithdrawalFragment"
        android:label="Permintaan Penarikan"
        tools:layout="@layout/fragment_admin_withdrawal" />

    <fragment
        android:id="@+id/adminAngsuranFragment"
        android:name="com.example.project_map.ui.admin.installments.AdminInstallmentFragment"
        android:label="Angsuran Berjalan"
        tools:layout="@layout/fragment_admin_installment" />

    <fragment
        android:id="@+id/adminDataAnggotaFragment"
        android:name="com.example.project_map.ui.admin.users.AdminUserFragment"
        android:label="Data Anggota"
        tools:layout="@layout/fragment_admin_user" />

    <fragment
        android:id="@+id/fragmentTransaksiSimpanan"
        android:name="com.example.project_map.ui.admin.savings.FragmentAdminSavingsHistory"
        android:label="Transaksi Simpanan"
        tools:layout="@layout/fragment_admin_savings_history" />

    <fragment
        android:id="@+id/adminLaporanKeuanganFragment"
        android:name="com.example.project_map.ui.admin.report.AdminFinancialReportFragment"
        android:label="Laporan Keuangan"
        tools:layout="@layout/fragment_admin_financial_report" />

    <fragment
        android:id="@+id/adminNotifikasiFragment"
        android:name="com.example.project_map.ui.admin.notification.AdminNotificationFragment"
        android:label="Kirim Notifikasi"
        tools:layout="@layout/fragment_admin_notification" />

    <fragment
        android:id="@+id/fragmentPinjamanAdmin"
        android:name="com.example.project_map.ui.admin.loans.AdminLoanFragment"
        android:label="Pengajuan Pinjaman"
        tools:layout="@layout/fragment_admin_loan" />

    <fragment
        android:id="@+id/adminPengaturanFragment"
        android:name="com.example.project_map.ui.admin.settings.AdminPengaturanFragment"
        android:label="Pengaturan"
        tools:layout="@layout/fragment_admin_pengaturan" />
</navigation>