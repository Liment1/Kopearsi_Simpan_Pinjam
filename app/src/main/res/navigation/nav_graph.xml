<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.project_map.ui.home.HomeFragment"
        android:label="Beranda"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/savingsFragment"
        android:name="com.example.project_map.ui.savings.SavingsFragment"
        android:label="Simpanan"
        tools:layout="@layout/fragment_savings" />

    <fragment
        android:id="@+id/loansFragment"
        android:name="com.example.project_map.ui.loans.LoansFragment"
        android:label="Pengajuan Pinjaman"
        tools:layout="@layout/fragment_loans" />

    <fragment
        android:id="@+id/pinjamanFragment"
        android:name="com.example.project_map.ui.loans.PinjamanFragment"
        android:label="Pinjaman"
        tools:layout="@layout/fragment_pinjaman">
        <action
            android:id="@+id/action_pinjamanFragment_to_loansFragment"
            app:destination="@id/loansFragment" />
    </fragment>

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.project_map.ui.account.AccountFragment"
        android:label="Akun" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.project_map.ui.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.project_map.ui.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.project_map.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>