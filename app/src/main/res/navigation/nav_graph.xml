<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <include app:graph="@navigation/admin_nav_graph" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.project_map.ui.other.splash.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.project_map.ui.user.home.UserHomeFragment"
        android:label="Beranda"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_savingsFragment"
            app:destination="@id/savingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_loansFragment"
            app:destination="@id/loansFragment" />
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_homeFragment_to_loanForm"
            app:destination="@id/LoanForm" />
        <action
            android:id="@+id/action_homeFragment_to_notificationFragment"
            app:destination="@id/notificationFragment" />
    </fragment>

    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.example.project_map.ui.user.notification.UserNotificationFragment"
        android:label="Notifikasi"
        tools:layout="@layout/fragment_user_notification" />

    <fragment
        android:id="@+id/savingsFragment"
        android:name="com.example.project_map.ui.user.savings.UserSavingsFragment"
        android:label="Simpanan"
        tools:layout="@layout/fragment_user_savings" />

    <fragment
        android:id="@+id/loansFragment"
        android:name="com.example.project_map.ui.user.loans.UserLoansFragment"
        android:label="Daftar Pinjaman"
        tools:layout="@layout/fragment_user_loans">
        <action
            android:id="@+id/action_loansFragment_to_LoanForm"
            app:destination="@id/LoanForm" />
        <action
            android:id="@+id/action_loansFragment_to_loanDetailFragment"
            app:destination="@id/loanDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/LoanForm"
        android:name="com.example.project_map.ui.user.loans.LoanFormFragment"
        android:label="Ajukan Pinjaman"
        tools:layout="@layout/fragment_loan_form">
    </fragment>

    <fragment
        android:id="@+id/loanDetailFragment"
        android:name="com.example.project_map.ui.user.loans.installments.LoanDetailFragment"
        android:label="Loan Detail"
        tools:layout="@layout/fragment_loan_detail">
        <argument
            android:name="loanId"
            app:argType="string" />
        <action
            android:id="@+id/action_loanDetailFragment_to_angsuranFragment"
            app:destination="@id/angsuranFragment" />
    </fragment>

    <fragment
        android:id="@+id/angsuranFragment"
        android:name="com.example.project_map.ui.user.loans.installments.UserAngsuranFragment"
        android:label="Pembayaran Angsuran"
        tools:layout="@layout/fragment_angsuran">

        <argument
            android:name="loanId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="installmentId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />

    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.project_map.ui.auth.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_adminFragment"
            app:destination="@id/admin_nav_graph"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.project_map.ui.auth.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.project_map.ui.user.profile.UserProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_userDetailProfileFragment"
            app:destination="@id/userDetailProfileFragment" />
        <action
            android:id="@+id/action_profileFragment_to_userMonthlyReportFragment"
            app:destination="@id/userMonthlyReportFragment" />
        <action
            android:id="@+id/action_profileFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/userDetailProfileFragment"
        android:name="com.example.project_map.ui.user.profile.detail.UserDetailProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_detail_profile"/>

    <fragment
        android:id="@+id/userMonthlyReportFragment"
        android:name="com.example.project_map.ui.user.profile.report.UserMonthlyReportFragment"
        android:label="Monthly Report"
        tools:layout="@layout/fragment_monthly_report"/>

</navigation>