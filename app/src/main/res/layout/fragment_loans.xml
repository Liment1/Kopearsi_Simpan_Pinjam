<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- HEADER FIXED -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/green_primary"
        android:orientation="horizontal"
        android:paddingTop="36dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@android:color/white"
            android:contentDescription="Kembali" />

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Ajukan Pinjaman Baru"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- ISI FORM -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Jenis Peminjaman -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Peminjaman"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/edtJenisPinjaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contoh: Modal Usaha" />

            <!-- Keperluan -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keperluan Peminjaman"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/edtPeruntukan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contoh: Beli perlengkapan usaha" />

            <!-- Tenor -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tenor Peminjaman"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/edtLamaPinjaman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Masukkan lama pinjaman (angka)"
                    android:inputType="number" />

                <Spinner
                    android:id="@+id/spinnerSatuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/satuan_tenor"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- Nominal -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nominal Peminjaman (Rp)"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/edtNominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan nominal"
                android:inputType="number" />

            <!-- Foto KTP -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foto KTP (jaminan)"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp" />

            <ImageView
                android:id="@+id/imgKtpPreview"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:background="#EEEEEE"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnUploadKtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unggah atau Ambil Foto KTP"
                android:backgroundTint="@color/green_primary"
                android:textColor="@android:color/white" />

            <!-- Info Hitungan -->
            <TextView
                android:id="@+id/txtJasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Jasa Pinjaman (5%): Rp 0" />

            <TextView
                android:id="@+id/txtTotalPengembalian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Pengembalian: Rp 0" />

            <TextView
                android:id="@+id/txtDanaDiterima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Dana Diterima: Rp 0" />

            <!-- Tombol Ajukan -->
            <Button
                android:id="@+id/btnAjukan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Kirim Pengajuan Pinjaman"
                android:backgroundTint="@color/green_primary"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
