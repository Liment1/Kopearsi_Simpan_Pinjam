<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/green_primary"
        android:orientation="horizontal"
        android:paddingTop="36dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="@android:color/white"
            android:contentDescription="Kembali" />

        <TextView
            android:id="@+id/tvHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Ajukan Pinjaman Baru"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Analisis Kredit Skor"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <FrameLayout
                        android:layout_width="200dp"
                        android:layout_height="120dp">

                        <com.example.project_map.ui.other.custom.SemiCircleProgressBar
                            android:id="@+id/progressBarScore"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginBottom="8dp"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="#333333"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Poin Kredit"
                                android:textSize="12sp"
                                android:textColor="#757575"/>
                        </LinearLayout>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvDecision"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Keputusan: -"
                        android:textSize="16sp"
                        android:layout_marginTop="12dp"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/btnRefreshScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cek Skor Terbaru"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginTop="12dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Peminjaman"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/edtJenisPinjaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contoh: Modal Usaha" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Keperluan Peminjaman"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/edtPeruntukan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contoh: Beli perlengkapan usaha" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tenor Peminjaman"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/edtLamaPinjaman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Masukkan lama pinjaman (angka)"
                    android:inputType="number" />

                <Spinner
                    android:id="@+id/spinnerSatuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/satuan_tenor"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nominal Peminjaman (Rp)"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/edtNominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan nominal"
                android:inputType="number" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foto KTP (jaminan)"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp" />

            <ImageView
                android:id="@+id/imgKtpPreview"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:background="#EEEEEE"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnUploadKtp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unggah atau Ambil Foto KTP"
                android:backgroundTint="@color/green_primary"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtJasa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Jasa Pinjaman (5%): Rp 0" />

            <TextView
                android:id="@+id/txtTotalPengembalian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Pengembalian: Rp 0" />

            <TextView
                android:id="@+id/txtDanaDiterima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Dana Diterima: Rp 0" />

            <Button
                android:id="@+id/btnAjukan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Kirim Pengajuan Pinjaman"
                android:backgroundTint="@color/green_primary"
                android:textColor="@android:color/white"
                android:layout_marginBottom="50dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>