<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ringkasan Keuangan"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvNamaAnggota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Budi Santoso"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Simpanan"/>

    <TextView
        android:id="@+id/tvTotalSimpananValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rp 2.500.000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Pinjaman Aktif"/>

    <TextView
        android:id="@+id/tvTotalPinjamanValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Rp 5.000.000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnEditData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Data Anggota"/>

</LinearLayout>
