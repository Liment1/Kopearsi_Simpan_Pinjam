<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F0F0F0"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#57B362"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_koperasi_logo"
                        android:contentDescription="Koperasi Logo"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Koperasi Web"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PT. Maju Bersama"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

<!--                    <ImageView-->
<!--                        android:layout_width="32dp"-->
<!--                        android:layout_height="32dp"-->
<!--                        android:src="@drawable/ic_user_profile"-->
<!--                        android:background="@drawable/circle_background"-->
<!--                        android:padding="4dp"-->
<!--                        android:contentDescription="User Profile"/>-->
                </LinearLayout>

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selamat Datang,"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvWelcomeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Santi Sanjaya"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#FFB300">

                    <RelativeLayout
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgKoperasiLogoSmall"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_koperasi_logo"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            app:tint="@android:color/white"
                            android:contentDescription="Small Koperasi Logo"/>

                        <TextView
                            android:id="@+id/tvAngNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ANG-003-2023-001"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"/>

                        <TextView
                            android:id="@+id/tvSaldoLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imgKoperasiLogoSmall"
                            android:layout_marginTop="12dp"
                            android:text="Total Simpanan"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvSaldo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvSaldoLabel"
                            android:text="Rp 10.000.000"
                            android:textColor="@android:color/white"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvSimpananWajib"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvSaldo"
                            android:text="Simpanan Wajib Rp 100.000"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:layout_marginBottom="12dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnPengajuanPenarikan"
                            style="@style/Widget.Material3.Button.TextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvSimpananWajib"
                            android:backgroundTint="@android:color/transparent"
                            android:gravity="start|center_vertical"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:paddingStart="16dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="16dp"
                            android:paddingBottom="8dp"
                            android:text="Pengajuan Peminjaman >>"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:cornerRadius="8dp"
                            app:strokeColor="@android:color/white"
                            app:strokeWidth="1dp" />
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            android:elevation="2dp">

            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Limit Pinjaman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/tvLimitPinjamanValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 100.000.000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            android:elevation="2dp">

            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Pinjaman Terpakai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#333333"/>

                <TextView
                    android:id="@+id/tvPinjamanTerpakaiValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 5.000.000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                android:elevation="2dp">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pinjaman Aktif"
                        android:textColor="#333333"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvPinjamanAktifValue"
                        android:text="3"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Space android:layout_width="12dp" android:layout_height="match_parent"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardCornerRadius="12dp"
                android:elevation="2dp">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pinjaman Lunas"
                        android:textColor="#333333"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvPinjamanLunasValue"
                        android:text="3"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Aktifitas Terakhir"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerRecent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>