<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FA">

    <!-- HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#00796B"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pinjaman Saya"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- KONTEN -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Judul -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pinjaman Aktif"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#00796B"
                android:layout_marginBottom="12dp"/>

            <!-- Container untuk daftar pinjaman -->
            <LinearLayout
                android:id="@+id/containerPinjamanAktif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- Tombol Aksi -->
            <Button
                android:id="@+id/btnAjukanPinjaman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajukan Pinjaman Baru"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:backgroundTint="#388E3C"
                android:elevation="3dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/btnLihatRiwayat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lihat Riwayat Pinjaman"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:backgroundTint="#00796B"
                android:elevation="3dp"/>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
