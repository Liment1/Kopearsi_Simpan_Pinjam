<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?attr/selectableItemBackground"
    android:elevation="3dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Bar Atas: Nama & Tombol Hapus -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtNamaPeminjam"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Nama Peminjam"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <ImageButton
                android:id="@+id/btnHapus"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_delete"
                app:tint="?attr/colorError"
                android:contentDescription="Hapus Pinjaman" />
        </LinearLayout>

        <!-- Info Pinjaman -->
        <TextView
            android:id="@+id/txtNominal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nominal: Rp0"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtTenor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tenor: 0 bulan"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtTujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tujuan: -"
            android:textSize="15sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Proses"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/txtAlasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alasan Penolakan: -"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="4dp"
            android:visibility="gone" />

        <!-- Tombol Aksi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTolak"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tolak"
                app:icon="@android:drawable/ic_menu_close_clear_cancel"
                app:iconGravity="textStart"
                app:iconPadding="6dp"
                app:iconTint="?attr/colorError"
                app:strokeColor="?attr/colorError"
                app:strokeWidth="1dp"
                app:rippleColor="?attr/colorError" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTerima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terima"
                app:icon="@android:drawable/ic_input_add"
                app:iconGravity="textStart"
                app:iconPadding="6dp"
                app:iconTint="@android:color/white"
                app:backgroundTint="?attr/colorPrimary"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
