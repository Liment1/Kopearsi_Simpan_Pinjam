<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:layout_marginBottom="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivStatusIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@drawable/ic_status_pending"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Menunggu Persetujuan"
            android:background="@drawable/status_tag_pending"
            android:textColor="#FFA000"
            android:textSize="10sp"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivStatusIcon"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tvLoanAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp 6.000.000"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvStatus"
            app:layout_constraintStart_toStartOf="@id/tvStatus"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvLoanPurpose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Pinjaman Berjangka untuk Pernikahan"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tvLoanAmount"
            app:layout_constraintStart_toStartOf="@id/tvStatus"/>

        <TextView
            android:id="@+id/tvLoanDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="20 Januari 2025"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tvLoanPurpose"
            app:layout_constraintStart_toStartOf="@id/tvStatus"/>

        <TextView
            android:id="@+id/tvLoanTenor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2 Bulan\nTenor"
            android:gravity="end"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvRejectionReason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Alasan Penolakan: Terlalu sering meminjam tidak dikembalikan"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:textStyle="italic"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvStatus"
            app:layout_constraintTop_toBottomOf="@id/tvLoanDate"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>