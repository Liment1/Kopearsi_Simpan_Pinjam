<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#00796B"
        android:orientation="horizontal"
        android:paddingTop="36dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <!-- ðŸ”¹ Tombol Back -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="Kembali"
            app:srcCompat="@drawable/ic_arrow_back"
            app:tint="@android:color/white"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/txtHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Pinjaman"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <!-- ðŸ”¹ Tombol Hapus -->
        <ImageButton
            android:id="@+id/btnHapusPinjamanUser"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/ic_delete"
            app:tint="?attr/colorError"
            android:contentDescription="Hapus" />
    </LinearLayout>

    <!-- KONTEN -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Kartu Status -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="#FFFFFF"
                android:clipToOutline="true">

                <TextView
                    android:id="@+id/txtStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: -"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#00796B"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/txtAlasan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alasan Penolakan: -"
                    android:textSize="14sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Kartu Detail -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:clipToOutline="true">

                <TextView
                    android:id="@+id/txtNominal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nominal: Rp0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/txtSisa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sisa Angsuran: Rp0"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/txtTenor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tenor: -"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/txtTujuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tujuan: -"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>

            <!-- Kartu Pembayaran -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:padding="16dp"
                android:clipToOutline="true">

                <EditText
                    android:id="@+id/edtBayar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Masukkan jumlah bayar"
                    android:inputType="numberDecimal"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnBayar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bayar"
                    android:backgroundTint="#388E3C"
                    android:textColor="@android:color/white"
                    android:elevation="3dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
