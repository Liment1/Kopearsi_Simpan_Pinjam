<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivTimelineIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_timeline_pending"
            app:tint="#D32F2F"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tvInstallmentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="#1"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#9E9E9E"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/ivTimelineIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTotalPaid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rp 100.000"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/tvInstallmentNumber"
            app:layout_constraintStart_toStartOf="@id/tvInstallmentNumber"/>

        <TextView
            android:id="@+id/tvInstallmentType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tvTotalPaid"
            app:layout_constraintTop_toBottomOf="@id/tvTotalPaid"
            tools:text="Belum Dibayar"
            tools:textColor="#D32F2F" />

        <TextView
            android:id="@+id/tvPaymentDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="12sp"
            android:textColor="#757575"
            app:layout_constraintStart_toStartOf="@id/tvInstallmentType"
            app:layout_constraintTop_toBottomOf="@id/tvInstallmentType"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Jatuh Tempo: 20 Mar 2025" />

        <TextView
            android:id="@+id/tvOtherFees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Biaya Lain"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>